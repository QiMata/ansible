# Proxmox Configuration for Molecule Testing
# Copy this file to .env and configure your Proxmox settings

# Proxmox server details
PROXMOX_URL=https://10.80.0.1:8006
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your-password

# Alternative: Use API Token (Recommended for security)
# PROXMOX_TOKEN_ID=not_a_real_login@pve!moleculetester
# PROXMOX_TOKEN_SECRET=c033594d-13ce-4618-bd46-cdd6000f3ff5

# Proxmox Node Configuration
PROXMOX_NODE=node1

# SSL Settings
PROXMOX_VALIDATE_CERTS=false

CONTAINER_ID=200
TEMPLATE=debian-12-standard_12.7-1_amd64.tar.zst
STORAGE=lxcs
TEMPLATE_STORAGE=buildinfra
MEMORY=4096
CORES=2
# Disk configuration
DISK_SIZE=10G
# Container password
CONTAINER_PASSWORD=molecule12345
# Network configuration
# For DHCP (dynamic IP):
# NETWORK=name=eth0,bridge=vmbr0,ip=dhcp
# For static IP:
NETWORK=name=eth0,bridge=vmbr0,ip=10.80.0.200/24,gw=10.80.0.150
CONTAINER_IP=10.80.0.200
