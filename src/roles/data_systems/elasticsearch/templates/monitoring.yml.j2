# Elasticsearch monitoring configuration
# Generated by Ansible

{% if es_enable_monitoring %}
xpack.monitoring.enabled: true
xpack.monitoring.collection.enabled: {{ es_monitoring_collection_enabled | lower }}
{% if es_monitoring_cluster_uuid %}
xpack.monitoring.cluster_uuid: "{{ es_monitoring_cluster_uuid }}"
{% endif %}

{% if es_monitoring_exporters %}
xpack.monitoring.exporters:
{% for name, config in es_monitoring_exporters.items() %}
  {{ name }}:
{% for key, value in config.items() %}
    {{ key }}: {{ value | to_json }}
{% endfor %}
{% endfor %}
{% endif %}
{% endif %}

{% if es_watcher_enabled %}
xpack.watcher.enabled: true
xpack.watcher.encrypt_sensitive_data: {{ es_watcher_encrypt_sensitive_data | lower }}
{% endif %}
