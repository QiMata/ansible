# Elasticsearch monitoring configuration
# Generated by Ansible

{% if elasticsearch_enable_monitoring %}
xpack.monitoring.enabled: true
xpack.monitoring.collection.enabled: {{ elasticsearch_monitoring_collection_enabled | lower }}
{% if elasticsearch_monitoring_cluster_uuid %}
xpack.monitoring.cluster_uuid: "{{ elasticsearch_monitoring_cluster_uuid }}"
{% endif %}

{% if elasticsearch_monitoring_exporters %}
xpack.monitoring.exporters:
{% for name, config in elasticsearch_monitoring_exporters.items() %}
  {{ name }}:
{% for key, value in config.items() %}
    {{ key }}: {{ value | to_json }}
{% endfor %}
{% endfor %}
{% endif %}
{% endif %}

{% if elasticsearch_watcher_enabled %}
xpack.watcher.enabled: true
xpack.watcher.encrypt_sensitive_data: {{ elasticsearch_watcher_encrypt_sensitive_data | lower }}
{% endif %}
