# ============================================================================
# MariaDB Configuration File - Generated by Ansible
# Environment: {{ mariadb_environment }}
# Generated: {{ ansible_date_time.iso8601 }}
# ============================================================================

[mysqld]
# Basic Configuration
port = {{ mariadb_port }}
bind-address = {{ mariadb_bind_address }}
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid

# Data Directory
datadir = /var/lib/mysql

# Character Set and Collation
character-set-server = {{ mariadb_character_set_server }}
collation-server = {{ mariadb_collation_server }}

# Connection Configuration
max_connections = {{ mariadb_max_connections }}
connect_timeout = 60
wait_timeout = 28800
interactive_timeout = 28800

# Query Cache Configuration
{% if mariadb_query_cache_type | int > 0 %}
query_cache_type = {{ mariadb_query_cache_type }}
query_cache_size = {{ mariadb_query_cache_size }}
{% else %}
query_cache_type = 0
query_cache_size = 0
{% endif %}

# Memory Configuration
tmp_table_size = {{ mariadb_tmp_table_size }}
max_heap_table_size = {{ mariadb_max_heap_table_size }}
sort_buffer_size = 256K
read_buffer_size = 128K
read_rnd_buffer_size = 256K
join_buffer_size = 128K

# InnoDB Configuration
innodb_buffer_pool_size = {{ mariadb_innodb_buffer_pool_size }}
innodb_log_file_size = {{ mariadb_innodb_log_file_size }}
innodb_log_buffer_size = {{ mariadb_innodb_log_buffer_size }}
innodb_flush_log_at_trx_commit = {{ mariadb_innodb_flush_log_at_trx_commit }}
{% if mariadb_innodb_file_per_table %}
innodb_file_per_table = 1
{% else %}
innodb_file_per_table = 0
{% endif %}

# Container-aware settings
{% if ansible_virtualization_type in ['docker', 'container', 'lxc'] %}
innodb_use_native_aio = 0
innodb_flush_method = fsync
innodb_doublewrite = 0
{% endif %}

# Binary Logging
{% if mariadb_enable_binlog %}
log_bin = mysql-bin
binlog_format = {{ mariadb_binlog_format }}
expire_logs_days = {{ mariadb_binlog_expire_logs_days }}
server_id = {{ mariadb_server_id }}
{% endif %}

# Error Logging
log_error = {{ mariadb_log_error }}
log_warnings = {{ mariadb_log_warnings }}

# Slow Query Log
{% if mariadb_slow_query_log %}
slow_query_log = 1
slow_query_log_file = {{ mariadb_slow_query_log_file }}
long_query_time = {{ mariadb_long_query_time }}
log_queries_not_using_indexes = 1
{% endif %}

# Performance Schema
{% if mariadb_performance_schema %}
performance_schema = ON
{% else %}
performance_schema = OFF
{% endif %}

# SSL Configuration
{% if mariadb_enable_ssl %}
ssl-cert = {{ mariadb_ssl_cert }}
ssl-key = {{ mariadb_ssl_key }}
ssl-ca = {{ mariadb_ssl_ca }}
{% endif %}

# Replication Configuration
{% if mariadb_enable_replication and mariadb_replication_role == 'slave' %}
relay_log = mysql-relay-log
read_only = 1
{% endif %}

# Galera Cluster Configuration
{% if mariadb_enable_galera %}
wsrep_on = ON
wsrep_provider = /usr/lib/galera/libgalera_smm.so
wsrep_cluster_name = {{ mariadb_galera_cluster_name }}
{% if mariadb_galera_cluster_nodes | length > 0 %}
wsrep_cluster_address = gcomm://{{ mariadb_galera_cluster_nodes | join(',') }}
{% endif %}
wsrep_node_address = {{ ansible_default_ipv4.address }}
wsrep_node_name = {{ ansible_hostname }}
wsrep_sst_method = rsync
{% endif %}

[mysql]
default-character-set = {{ mariadb_character_set_server }}

[mysqldump]
single-transaction
routines
triggers

[client]
default-character-set = {{ mariadb_character_set_server }}
socket = /var/run/mysqld/mysqld.sock
