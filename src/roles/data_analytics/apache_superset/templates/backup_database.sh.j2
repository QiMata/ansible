#!/bin/bash
# Superset Database Backup Script

set -e

BACKUP_DIR="{{ apache_superset_db_backup_path }}"
TIMESTAMP=$(date +%Y%m%d_%H%M%S)
BACKUP_FILE="${BACKUP_DIR}/apache_superset_db_${TIMESTAMP}.sql"

# Create backup directory if it doesn't exist
mkdir -p "${BACKUP_DIR}"

{% if apache_superset_database_uri.startswith('sqlite') %}
# SQLite backup
SQLITE_PATH="{{ apache_superset_database_uri.split('://')[1] }}"
echo "Backing up SQLite database: ${SQLITE_PATH}"
sqlite3 "${SQLITE_PATH}" ".backup ${BACKUP_FILE%.sql}.db"
gzip "${BACKUP_FILE%.sql}.db"
echo "SQLite backup completed: ${BACKUP_FILE%.sql}.db.gz"

{% elif apache_superset_database_uri.startswith('postgresql') %}
# PostgreSQL backup
echo "Backing up PostgreSQL database"
export PGPASSWORD="{{ apache_superset_database_uri.split('@')[0].split(':')[1] if '@' in apache_superset_database_uri and ':' in apache_superset_database_uri.split('@')[0] else '' }}"
pg_dump \
  -h "{{ apache_superset_database_uri.split('@')[-1].split('/')[0].split(':')[0] if '@' in apache_superset_database_uri else 'localhost' }}" \
  -p "{{ apache_superset_database_uri.split('@')[-1].split('/')[0].split(':')[1] if '@' in apache_superset_database_uri and ':' in apache_superset_database_uri.split('@')[-1].split('/')[0] else '5432' }}" \
  -U "{{ apache_superset_database_uri.split('@')[0].split(':')[0] if '@' in apache_superset_database_uri else 'postgres' }}" \
  -d "{{ apache_superset_database_uri.split('/')[-1] }}" \
  --no-password \
  > "${BACKUP_FILE}"
gzip "${BACKUP_FILE}"
echo "PostgreSQL backup completed: ${BACKUP_FILE}.gz"

{% elif apache_superset_database_uri.startswith('mysql') %}
# MySQL backup
echo "Backing up MySQL database"
mysqldump \
  -h "{{ apache_superset_database_uri.split('@')[-1].split('/')[0].split(':')[0] if '@' in apache_superset_database_uri else 'localhost' }}" \
  -P "{{ apache_superset_database_uri.split('@')[-1].split('/')[0].split(':')[1] if '@' in apache_superset_database_uri and ':' in apache_superset_database_uri.split('@')[-1].split('/')[0] else '3306' }}" \
  -u "{{ apache_superset_database_uri.split('@')[0].split(':')[0] if '@' in apache_superset_database_uri else 'root' }}" \
  {% if apache_superset_database_uri.split('@')[0].split(':')[1] if '@' in apache_superset_database_uri and ':' in apache_superset_database_uri.split('@')[0] else '' %}-p"{{ apache_superset_database_uri.split('@')[0].split(':')[1] if '@' in apache_superset_database_uri and ':' in apache_superset_database_uri.split('@')[0] else '' }}"{% endif %} \
  "{{ apache_superset_database_uri.split('/')[-1] }}" \
  > "${BACKUP_FILE}"
gzip "${BACKUP_FILE}"
echo "MySQL backup completed: ${BACKUP_FILE}.gz"

{% endif %}

echo "Database backup completed successfully at $(date)"
