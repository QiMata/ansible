<?xml version="1.0" encoding="UTF-8"?>
<users>
    <!-- Initial Admin User -->
    {% if apache_nifi_admin_identity != "" %}
    <user identifier="{{ apache_nifi_admin_identity | hash('sha256') }}" identity="{{ apache_nifi_admin_identity }}"/>
    {% endif %}
    
    <!-- Provisioned Users -->
    {% for user in apache_nifi_users %}
    <user identifier="{{ user.identity | hash('sha256') }}" identity="{{ user.identity }}"/>
    {% endfor %}
</users>
