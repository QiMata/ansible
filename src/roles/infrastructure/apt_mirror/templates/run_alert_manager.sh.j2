#!/usr/bin/env bash
set -euo pipefail

# Wrapper to run alert_manager.py but never fail the service in CI
ARGS=("${@}")

if command -v python3 >/dev/null 2>&1; then
  /usr/bin/python3 /opt/apt-mirror-alerts/alert_manager.py "${ARGS[@]}" || true
else
  echo "python3 not found; skipping alert manager invocation" >&2
fi

exit 0
