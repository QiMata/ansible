/var/log/grafana/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    copytruncate
    su grafana grafana
    create 0644 grafana grafana
    sharedscripts
    postrotate
        /bin/systemctl reload grafana-server > /dev/null 2>&1 || true
    endscript
}
