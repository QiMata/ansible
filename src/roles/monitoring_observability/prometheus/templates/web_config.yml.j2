# Managed by Ansible: /etc/prometheus/web_config.yml

{% if prometheus_enable_tls %}
tls_server_config:
  cert_file: {{ prometheus_tls_cert_file }}
  key_file: {{ prometheus_tls_key_file }}
{% endif %}

{% if prometheus_basic_auth_users | length > 0 %}
basic_auth_users:
{% for username, password_hash in prometheus_basic_auth_users.items() %}
  {{ username }}: {{ password_hash }}
{% endfor %}
{% endif %}
