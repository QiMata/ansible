# TOTP Configuration for OpenLDAP MFA
# Generated by Ansible

# TOTP Settings
TOTP_ISSUER={{ openldap_mfa_totp_issuer }}
TOTP_WINDOW_SIZE={{ openldap_mfa_totp_window_size }}
TOTP_RATE_LIMIT={{ openldap_mfa_totp_rate_limit }}
TOTP_SECRET_LENGTH={{ openldap_mfa_totp_secret_length }}
TOTP_TIME_STEP={{ openldap_mfa_totp_time_step }}

# LDAP Integration
LDAP_BASE_DN={{ openldap_server_base_dn }}
LDAP_ADMIN_DN=cn=admin,{{ openldap_server_base_dn }}
LDAP_URI=ldapi:///

# Audit Settings
{% if openldap_mfa_audit_enabled %}
AUDIT_ENABLED=true
AUDIT_LOG={{ openldap_mfa_audit_log }}
{% else %}
AUDIT_ENABLED=false
{% endif %}
