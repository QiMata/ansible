# VLAN interface configuration for keepalived
# Generated by Ansible - Do not edit manually

network:
  version: 2
  vlans:
{% for vlan in keepalived_vlan_interfaces %}
    {{ vlan.name }}:
      id: {{ vlan.vlan_id }}
      link: {{ vlan.device }}
{% if vlan.ip is defined %}
      addresses:
        - {{ vlan.ip }}
{% endif %}
{% if vlan.gateway is defined %}
      gateway4: {{ vlan.gateway }}
{% endif %}
{% if vlan.nameservers is defined %}
      nameservers:
        addresses: {{ vlan.nameservers }}
{% endif %}
{% endfor %}
